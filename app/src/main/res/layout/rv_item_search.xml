<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/black"
    android:orientation="vertical"
    android:minHeight="120dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:src="@drawable/tmdb_placeholder_land"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_thumbnail"
            android:layout_toLeftOf="@id/iv_category"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long Title of Movie"
                android:textColor="@color/titlePrimaryTextColor"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/titleSecondaryTextColor"
                android:maxLines="4"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_television"
            android:background="@color/colorAccentGreen"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>